<?xml version="1.0" encoding="UTF-8"?>
<project name="build.main">

    <description>
        Demonstrates how to import build files from a jar
        (c) Jim Barritt 2010
    </description>

	<property name="base.dir" value="${basedir}" />
	
	<target name="info">
		<echo message="Hello build world!" />
		<echo message="ant.home    : ${ant.home}" />
		<echo message="ant.version : ${ant.version}" />		
		<echo message="base.dir    : ${base.dir}" />
	</target>
	
	<target name="fail">
		<fail>Oops, there was a problem!</fail>
	</target>
	
</project>